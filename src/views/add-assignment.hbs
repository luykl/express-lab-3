    <main>
        <h2>Add Assignment</h2>
        <form action="/assignments/add-assignment-confirmation" method="post">
            <p>
                <label for="name">Assignment Name:</label>
                <input name="name" id="name" required />
            </p>
            <p>
                <label for="score">Your Score: </label>
                <input name="score" id="score" type="number" />
            </p>
            <p>
                <label for="totalPossible">Total Possible Score: </label>
                <input name="totalPossible" id="totalPossible" type="number" />
            </p>
            <p>
                <label for="complete">Have you completed this assignment?</label>
                <input name="complete" id="complete" type="checkbox"/>
		    </p>
            <p><input type="submit" value="Add"/></p>
            <p><a href="/">Cancel</a></p>   
        </form>
    </main>
    
</body>
</html>